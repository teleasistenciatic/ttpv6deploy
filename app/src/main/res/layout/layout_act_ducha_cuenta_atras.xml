<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fundacionmagtel.android.teleasistenciaticplus.act.ducha.actDuchaCuentaAtras"
    android:background="#ff33b5e5"
    android:id="@+id/miRelativeLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mTextField"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:text="00:00"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modo_ducha_boton_detener"
        android:id="@+id/btnCancelCountDown"
        android:onClick="cancelCountDown"
        android:layout_below="@+id/mTextField"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:textSize="44dp"
        android:textColor="#ffffffff" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#ffe3e9e3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_estado_manos_Libres"
        android:text="@string/txt_estado_manos_libres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <!-- Barra separadora horizontal -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <Switch
        android:id="@+id/sw_manos_libres_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:checked="false" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <Switch
        android:id="@+id/sw_manos_libres_al_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:checked="false" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.fundacionmagtel.android.teleasistenciaticplus.act.debug.actDebugSMS">

    <TextView
        android:id="@+id/debug_edit_sms_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Destinatario">

    </TextView>
    <EditText
        android:id="@+id/debug_edit_sms_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"></EditText>

    <TextView
        android:id="@+id/debug_edit_sms_message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mensaje del SMS">
    </TextView>

    <EditText
        android:id="@+id/debug_edit_sms_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"></EditText>

    <Button
        android:id="@+id/debug_sms_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="sms_send"
        android:text="Enviar un SMS" />

    <Button
        android:id="@+id/debug_sms_get_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="get_contact_from_contactlist"
        android:text="Obtener contacto" />

    <Button
        android:id="@+id/debug_screen_button_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="exit_button"
        android:text="Salida" />

</LinearLayout>

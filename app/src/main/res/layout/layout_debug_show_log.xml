<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fundacionmagtel.android.teleasistenciaticplus.act.debug.actDebugShowLog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/debug_screen_read_log_file_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fichero a leer :">
    </TextView>

    <EditText
        android:id="@+id/debug_screen_show_log_file"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/debug_screen_read_log_area_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del archivo :">
    </TextView>

    <EditText
        android:id="@+id/debug_screen_show_log_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        />

    <Button
        android:id="@+id/debug_screen_button_read_log_file"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Leer archivo de log"
        android:onClick="debug_screen_button_read_log_file_button"
        />

    <Button
        android:id="@+id/debug_screen_button_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Salida"
        android:onClick="exit_button"
        />

</LinearLayout>

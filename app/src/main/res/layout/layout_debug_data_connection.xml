<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fundacionmagtel.android.teleasistenciaticplus.act.debug.actDebugDataConnection"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_check_data_connection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Conexión de datos">
    </EditText>

    <EditText
        android:id="@+id/edit_check_data_connection_active_network"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="ActiveNetwork not NULL AND">
    </EditText>

    <EditText
        android:id="@+id/edit_check_data_connection_active_network_is_available"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="ActiveNetwork.isAvailable() AND">
    </EditText>

    <EditText
        android:id="@+id/edit_check_data_connection_active_network_is_connected"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="ActiveNetwork.isConnected() AND">
    </EditText>

    <Button
        android:id="@+id/button_debug_check_data_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Comprobar conexión de datos"
        android:onClick="main_debug_data_connection_check"
        />

    <Button
        android:id="@+id/debug_screen_button_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Salida"
        android:onClick="exit_button"
        />

</LinearLayout>

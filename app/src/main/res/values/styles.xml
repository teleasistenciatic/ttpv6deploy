<resources>

    <!-- Base application theme. -->
    <!-- Por defecto: Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="CustomActionBarTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme"
        parent = "@android:style/Theme.Holo.Light.DarkActionBar">
        <item name = "android:actionBarStyle">@style/MyActionBar
        </item>
    </style>

    <!-- Action Bar Styles -->
    <style name="MyActionBar"
            parent = "@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
            <item name="android:background">#FF002596</item>
    </style>

    <style name="fullscreen"
            parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    </style>



    <style name="blanco_sobre_negro">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Tamaño de títulos -->
    <style name="tex_size_big">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="tex_size_medium">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="tex_size_small">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Divisores -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:color">@color/white</item>
    </style>


</resources>
